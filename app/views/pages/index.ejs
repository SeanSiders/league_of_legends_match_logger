    <p>Select your favorite champion</p>
    <form action='champions/edit' method='get'>
        <select name='id_champion' id='champion' size='1'>
            <% champions.forEach(function(champion) { %>
                <option value=<%=champion.id_champion%>><%=champion.name%></option>
            <% }) %>
        </select>
        <input type='submit' value='Submit'>
    </form>
    <br>
    <form action='create_champion' method='get'>
        <p>Create a new champion</p>
        <input type='submit'>
    </form>
    <br>
    <p>View your favorite player</p>
    <form action='summoners' method='get'>
        <select name="id_summoner" id="id_summoner" size='1'>
            <% summoner.forEach(function(summoner) { %>
                <option value=<%=summoner.id_summoner%>><%=summoner.id_summoner%></option>
            <% }) %>
        </select>
        <input type='submit'>
    </form>
    <br>

    <p> View match history </p>
    <form action='matches' method='get'>
        <input type='submit'>
    </form>
    <!-- <p> View an overview </p>
